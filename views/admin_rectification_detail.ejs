<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Rectificación</title>
  <style>
    body{font-family:system-ui;margin:0;background:#f8fafc;padding:16px;}
    .box{background:#fff;border:1px solid #e5e7eb;border-radius:16px;padding:14px;box-shadow:0 8px 24px rgba(2,6,23,.06);margin-bottom:14px;}
    h2,h3{margin:0 0 10px;}
    .row{display:grid;grid-template-columns:1fr;gap:10px;}
    @media(min-width:900px){.row{grid-template-columns:1fr 1fr;}}
    table{width:100%;border-collapse:collapse;}
    th,td{padding:10px;border-bottom:1px solid #eef2f7;text-align:left;font-size:14px;}
    th{font-weight:900;}
    a{color:#2563eb;font-weight:900;text-decoration:none;}
  </style>
</head>
<body>
  <div class="box">
    <a href="/admin">← Volver</a>
    <h2 style="margin-top:8px;">Rectificación</h2>
    <div><b>Fecha:</b> <%= rec.createdAt %></div>
    <div><b>Alumno:</b> <%= rec.student?.name %> (<%= rec.student?.code %>)</div>
    <div><b>Periodo:</b> <%= rec.student?.period %> | <b>Modalidad:</b> <%= rec.student?.mode %></div>
    <div style="margin-top:10px;">
      <a href="/admin/rectifications/<%= rec.id %>/pdf">Descargar PDF</a>
    </div>
  </div>

  <div class="box">
    <h3>Cambios</h3>
    <table>
      <thead>
        <tr>
          <th>Curso</th>
          <th>Antes</th>
          <th>Después</th>
        </tr>
      </thead>
      <tbody>
        <% (rec.changes || []).forEach(c => { %>
          <tr>
            <td><b><%= c.code %></b><br/><%= c.name || "" %></td>
            <td>
              Gr: <%= c.from?.group %> | <%= c.from?.day %> | <%= c.from?.time %> | <%= c.from?.modality %>
            </td>
            <td>
              Gr: <%= c.to?.group %> | <%= c.to?.day %> | <%= c.to?.time %> | <%= c.to?.modality %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
