  <script>
  document.addEventListener('DOMContentLoaded', function() {
    // show spinner on login submit
    const loginForm = document.getElementById('loginForm');
    if (loginForm) loginForm.addEventListener('submit', () => document.getElementById('loadingOverlay').classList.add('active'));
    window.addEventListener('load', () => document.getElementById('loadingOverlay').classList.remove('active'));

    /* ===== AI Preferences Modal: open/close + count ===== */
    const aiSuggestBtn = document.getElementById('aiSuggestBtn');
    const aiPreferencesModal = document.getElementById('aiPreferencesModal');
    const aiModalCancel = document.getElementById('aiModalCancel');
    const aiModalGenerate = document.getElementById('aiModalGenerate');
    const aiModalCheckboxes = aiPreferencesModal?.querySelectorAll('.checkbox-input');
    const aiModalSelectedCount = aiPreferencesModal?.querySelector('#selectedCount');

    function showAiModal() {
      if (!aiPreferencesModal) return;
      aiPreferencesModal.style.display = 'flex';
      document.body.classList.add('ai-modal-open');
      updateAiModalSelectedCount();
    }
    function hideAiModal() {
      if (!aiPreferencesModal) return;
      aiPreferencesModal.style.display = 'none';
      document.body.classList.remove('ai-modal-open');
    }
    function updateAiModalSelectedCount() {
      if (!aiModalCheckboxes || !aiModalSelectedCount) return;
      const checkedCount = Array.from(aiModalCheckboxes).filter(cb => cb.checked).length;
      aiModalSelectedCount.textContent = checkedCount;
    }
    if (aiModalCheckboxes) aiModalCheckboxes.forEach(cb => cb.addEventListener('change', updateAiModalSelectedCount));
    if (aiSuggestBtn) aiSuggestBtn.addEventListener('click', showAiModal);
    if (aiModalCancel) aiModalCancel.addEventListener('click', hideAiModal);

    // IMPORTANT: Use LOCAL LOGIC on Generate
    if (aiModalGenerate) aiModalGenerate.addEventListener('click', async function() {
      const freeDays = Array.from(aiModalCheckboxes || []).filter(cb => cb.checked).map(cb => cb.value);
      window._aiFreeDays = freeDays;               // make available to readPreferences()
      hideAiModal();
      await autoAssignFromAvailable({ freeDays }); // <— call our local logic with override
      document.getElementById('seeTimetableBtn')?.click(); // open visual timetable
    });

    /* ===== Tiny utils and normalizers ===== */
    const norm = (s) => String(s || '').replace(/[^A-Z0-9]/gi, '').toUpperCase();
    const stripAcc = s => String(s||'').normalize('NFD').replace(/[\u0300-\u036f]/g, '');
    const canonicalDay = s => {
      const k = stripAcc(String(s||'')).toLowerCase();
      const map = { lunes:'Lunes', martes:'Martes', miercoles:'Miércoles', jueves:'Jueves', viernes:'Viernes', sabado:'Sábado', domingo:'Domingo' };
      return map[k] || (s || '—');
    };

    // Modality display + short letter
    const modalityDisplayNames = {
      'TEORÍA VIRTUAL':'TEORÍA VIRTUAL','TEORIA VIRTUAL':'TEORÍA VIRTUAL','VIRTUAL':'TEORÍA VIRTUAL','TEV':'TEORÍA VIRTUAL',
      'TEORÍA PRESENCIAL':'TEORÍA PRESENCIAL','TEORIA PRESENCIAL':'TEORÍA PRESENCIAL','PRESENCIAL':'TEORÍA PRESENCIAL','TEP':'TEORÍA PRESENCIAL',
      'LABORATORIO PRESENCIAL':'LABORATORIO PRESENCIAL','LAB PRESENCIAL':'LABORATORIO PRESENCIAL','LBP':'LABORATORIO PRESENCIAL',
      'V':'TEORÍA VIRTUAL', 'P':'TEORÍA PRESENCIAL','L':'LABORATORIO PRESENCIAL','PRE':'PRE'
    };
    function normalizeModalityDisplay(m){
      const t = stripAcc(String(m||'')).toUpperCase().trim();
      return modalityDisplayNames[t] || (m || '—');
    }
    function modalityLetter(mod){
      const m = stripAcc(String(normalizeModalityDisplay(mod)||'')).toUpperCase();
      if (m.includes('LAB')) return 'L';
      if (m.includes('VIRTUAL')) return 'V';
      if (m.includes('PRE')) return 'P';
      return '—';
    }

    // normalize "HH:MM–HH:MM"
    function normalizeTime(t){
      const s = String(t || '').trim();
      const m = s.match(/(\d{1,2}):(\d{2}).*?(\d{1,2}):(\d{2})/);
      if (m) return `${String(m[1]).padStart(2,'0')}:${m[2]}–${String(m[3]).padStart(2,'0')}:${m[4]}`;
      return s.replace(/\s*-\s*/g,'–').replace(/\s*–\s*/g,'–').replace(/\s+to\s+/i,'–').replace(/\s{2,}/g,' ');
    }
    const sameDayKey = d => stripAcc(String(d||'')).toLowerCase();
    function parseRange(range){
      const m = String(range || '').match(/(\d{1,2}):(\d{2}).*?(\d{1,2}):(\d{2})/);
      if (!m) return null;
      const a = (+m[1])*60 + (+m[2]);
      const b = (+m[3])*60 + (+m[4]);
      return a < b ? { start: a, end: b } : { start: b, end: a };
    }
    const overlap = (a,b) => a && b && a.start < b.end && b.start < a.end;

    // true-duplicate filter
    function removeTrueDuplicates(entries){
      const seen = new Set();
      return entries.filter(e=>{
        const r = parseRange(e.time);
        const key = [
          norm(e.code), norm(e.groupCode || ''), sameDayKey(e.day),
          r ? r.start : e.time, r ? r.end : '', norm(e.modality || '')
        ].join('|');
        if (seen.has(key)) return false;
        seen.add(key);
        return true;
      });
    }

    // read current / originals / changes
    const originals = {};
    const changes   = {};
    function readCurrent(row){
      const badge = row.querySelector('.badge');
      const metaItems = row.querySelectorAll('.course-meta .meta-item');
      return {
        code: (badge && badge.textContent || '—').trim(),
        name: (row.querySelector('.course-title')?.textContent || '—').trim(),
        group: metaItems[1] ? metaItems[1].querySelector('strong').textContent.trim() : '—',
        day:   canonicalDay(metaItems[2] ? metaItems[2].querySelector('strong').textContent.trim() : '—'),
        time:  normalizeTime(metaItems[3] ? metaItems[3].querySelector('strong').textContent.trim() : '—'),
        modality: normalizeModalityDisplay(metaItems[4] ? metaItems[4].querySelector('strong').textContent.trim() : '—')
      };
    }

    function renderChange(idx, before, after){
      const host = document.getElementById('chg-' + idx);
      if (!host) return;
      host.className = 'change-wrapper';
      host.innerHTML = `
        <div class="change-title">Cambios</div>
        <div class="change-compare">
          <div class="change-card">
            <div class="chg-field"><span class="label">Grupo :</span><span class="value">${escapeHtml(before.group)}</span></div>
            <div class="chg-field"><span class="label">Día :</span><span class="value">${escapeHtml(before.day)}</span></div>
            <div class="chg-field"><span class="label">Hora :</span><span class="value">${escapeHtml(before.time)}</span></div>
            <div class="chg-field"><span class="label">Modalidad :</span><span class="value">${escapeHtml(before.modality)}</span></div>
          </div>
          <div class="change-arrow">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </div>
          <div class="change-card">
            <div class="chg-field"><span class="label">Grupo :</span><span class="value">${escapeHtml(after.group)}</span></div>
            <div class="chg-field"><span class="label">Día :</span><span class="value">${escapeHtml(after.day)}</span></div>
            <div class="chg-field"><span class="label">Hora :</span><span class="value">${escapeHtml(after.time)}</span></div>
            <div class="chg-field"><span class="label">Modalidad :</span><span class="value">${escapeHtml(after.modality)}</span></div>
          </div>
        </div>`;
    }

    function buildPlanExcept(excludeRowId){
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        if (excludeRowId && row.id === excludeRowId) return;
        const base = originals[row.id] || readCurrent(row);
        const sel  = changes[row.id];
        const day  = canonicalDay(sel?.day || base.day);
        const time = normalizeTime(sel?.time || base.time);
        const range = parseRange(time);
        if (!range) return;
        const code = row.getAttribute('data-code') || base.code;
        entries.push({ code, day, time, start: range.start, end: range.end });
      });
      return entries;
    }

    function getConflict(plan, day, time){
      const r = parseRange(time);
      if (!r) return null;
      const key = sameDayKey(day);
      for (const p of plan) {
        if (sameDayKey(p.day) !== key) continue;
        if (overlap(r, p)) return p;
      }
      return null;
    }

    function parseDayTimeFromOption(o){
      let day = o.day || "", time = normalizeTime(o.hour || o.time || "");
      if ((!day || !time) && o.scheduleText) {
        const first = String(o.scheduleText).split("•")[0].trim();
        const m = first.match(/^([A-Za-zÁÉÍÓÚÜÑáéíóúüñ]+)\s+(\d{1,2}:\d{2}\s*[-–]?\s*\d{1,2}:\d{2})/);
        if (m) { day = day || m[1]; time = normalizeTime(m[2]); }
        else if (!day) { day = first.split(/\s+/)[0]; }
      }
      return { day: canonicalDay(day || "—"), time: time || "—" };
    }

    // Build originals once
    document.querySelectorAll('.course').forEach((row, idx) => {
      originals[row.id] = readCurrent(row);
      const details = row.querySelector('.repl');
      const container = row.querySelector('#opts-' + idx);
      if (!details || !container) return;

      details.addEventListener('toggle', async () => {
        if (!details.open) return;
        if (container.dataset.loaded === '1') return;

        const courseCode = row.getAttribute('data-code') || (row.querySelector('.badge')?.textContent || '').trim();
        const period     = row.getAttribute('data-period') || '';
        container.innerHTML = '<div class="option"><em>Configurando…</em></div>';

        try {
          const resp = await fetch('/available', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ period, courseCode })
          });
          const json = await resp.json();

          let opts = (json.data || []).filter(o => norm(o.courseCode) === norm(courseCode));
          const currentGroup = norm(getGroup(row));
          opts = opts.filter(o => norm(o.groupCode) !== currentGroup);

          // same modality as original
          const originalModality = normalizeModalityDisplay(row.querySelectorAll('.course-meta .meta-item strong')[4]?.textContent || '');
          opts = opts.filter(o => normalizeModalityDisplay(o.modality || '') === originalModality);

          if (!opts.length) {
            container.innerHTML = '<div class="option muted">No hay opciones de reemplazo para este curso.</div>';
            container.dataset.loaded = '1';
            return;
          }

          const currentPlan = buildPlanExcept(row.id);

          container.innerHTML = opts.map(o => {
            const { day, time } = parseDayTimeFromOption(o);
            const conflictWith = getConflict(currentPlan, day, time);

            const payload = safeJson({ ...o, day, time });
            const btnAttrs = conflictWith
              ? 'class="option-btn" disabled'
              : `class="option-btn" onclick='previewReplace(${idx}, ${payload})'`;

            return `
              <div class="option">
                <div class="option-code">${escapeHtml(o.courseCode || "—")}</div>
                <div class="option-fields">
                  <div class="field"><span class="label">Grupo</span><span class="value">${escapeHtml(o.groupCode || "—")}</span></div>
                  <div class="field"><span class="label">Día</span><span class="value">${escapeHtml(day)}</span></div>
                  <div class="field"><span class="label">Hora</span><span class="value">${escapeHtml(time)}</span></div>
                  <div class="field"><span class="label">Modalidad</span><span class="value">${escapeHtml(normalizeModalityDisplay(o.modality || "—"))}</span></div>
                </div>
                <div class="option-cta">
                  <button ${btnAttrs}>${conflictWith ? 'Horario en conflicto' : 'Usar este'}</button>
                  ${conflictWith ? `<div class="conflict-note">Entra en conflicto con ${escapeHtml(conflictWith.code)}. Selecciona otro horario de este curso.</div>` : ''}
                </div>
              </div>
            `;
          }).join('');

          container.dataset.loaded = '1';
        } catch (e) {
          console.error(e);
          container.innerHTML = '<div class="option">Error cargando opciones.</div>';
        }
      });
    });

    window.getGroup = function(row) {
      const meta = row.querySelectorAll('.course-meta .meta-item strong');
      return meta && meta[1] ? (meta[1].textContent || '').trim() : '';
    };

    window.previewReplace = function(rowIndex, opt){
      const row = document.getElementById('c-' + rowIndex);
      if (!row) return;

      const plan = buildPlanExcept(row.id);
      const conflict = getConflict(plan, opt.day, normalizeTime(opt.time || opt.hour));
      if (conflict) { alert(`Ese horario choca con ${conflict.code}. Selecciona otro tiempo de ese curso.`); return; }

      const original = originals[row.id] || readCurrent(row);
      const details = row.querySelector('.repl'); if (details) details.open = false;

      const after = {
        code: original.code,
        name: row.getAttribute('data-name') || original.name,
        group: opt.groupCode || '—',
        day:   canonicalDay(opt.day || original.day),
        time:  normalizeTime(opt.time || opt.hour || original.time),
        modality: normalizeModalityDisplay(opt.modality || original.modality)
      };

      changes[row.id] = after;
      renderChange(rowIndex, { group: original.group, day: original.day, time: original.time, modality: original.modality }, after);
    };
    function buildFinalEntries() {
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        const base = originals[row.id] || readCurrent(row);
        const sel  = changes[row.id];
        const code = row.getAttribute('data-code') || base.code;
        const name = row.getAttribute('data-name') || base.name;
        const day   = canonicalDay((sel?.day || base.day || '—'));
        const time  = normalizeTime(sel?.time || base.time || '—');
        const group = sel?.group || base.group || '—';
        const mod   = normalizeModalityDisplay(sel?.modality || base.modality || '—');
        entries.push({ code, name, day, time, group, modality: mod });
      });
      return entries;
    }

    function findConflicts(entries){
      const byDay = {};
      entries.forEach(e => {
        const r = parseRange(e.time);
        if (!r) return;
        const key = sameDayKey(e.day);
        byDay[key] = byDay[key] || [];
        byDay[key].push({ code:e.code, start:r.start, end:r.end, time:e.time });
      });
      const problems = [];
      Object.values(byDay).forEach(list => {
        list.sort((a,b)=>a.start-b.start);
        for (let i=0;i<list.length-1;i++){
          const A=list[i], B=list[i+1];
          if (overlap(A,B)) problems.push([A,B]);
        }
      });
      return problems;
    }

    function shortMod(mod){
      const t = (mod||'').toUpperCase();
      if (t.includes('LAB')) return 'L';
      if (t.includes('VIRT')) return 'V';
      if (t.includes('PRE') || t.includes('TEORÍA PRESENCIAL') || t.includes('TEORIA PRESENCIAL')) return 'P';
      return (t[0]||'—');
    }

    function renderTimetableStacked(entries){
      const DAYS = ['Lunes','Martes','Miércoles','Jueves','Viernes','Sábado']; // Domingo removed

      const head = `<div class="tt-head">${DAYS.map(d=>`<div class="cell">${d}</div>`).join('')}</div>`;
      const grid = `<div class="tt-grid">${DAYS.map(d=>`<div class="tt-col" data-day="${d}"></div>`).join('')}</div>`;
      const legend = `
        <div class="tt-legend">
          <span><span class="dot"></span>Curso</span>
          <span class="chip">P Presencial</span>
          <span class="chip">V Virtual</span>
          <span class="chip">L Laboratorio</span>
        </div>`;

      const panel = document.getElementById('ttGrid');
      panel.innerHTML = `<div class="tt-board">${head}${grid}${legend}</div>`;
      document.getElementById('courseCount').textContent = entries.length;

      // Fixed regex and function
      const toStart = (t) => {
        const m = /(\d{1,2}):(\d{2}).*?(\d{1,2}):(\d{2})/.exec(String(t||''));
        return m ? (+m[1])*60 + (+m[2]) : 24*60;
      };
      const byDay = Object.fromEntries(DAYS.map(d=>[d,[]]));
      entries.forEach(e => { const d = (e.day||''); if (byDay[d]) byDay[d].push(e); });
      DAYS.forEach(d => byDay[d].sort((a,b)=> toStart(a.time) - toStart(b.time)));

      const gridEl = panel.querySelector('.tt-grid');
      DAYS.forEach(d => {
        const col = gridEl.querySelector(`.tt-col[data-day="${d}"]`);
        byDay[d].forEach(e=>{
          const card = document.createElement('div');
          card.className = 'card-mini';
          card.innerHTML = `
            <span class="code">${escapeHtml(e.code)}</span>
            <div class="name">${escapeHtml(e.name||'')}</div>
            <div class="meta">
              <span class="chip">${escapeHtml(e.time || 'No asignada')}</span>
              <span class="chip mod">${escapeHtml(shortMod(e.modality||''))}</span>
            </div>`;
          col.appendChild(card);
        });
      });
    }

    // Hook timetable open/close
    const seeBtn = document.getElementById('seeTimetableBtn');
    if (seeBtn){
      seeBtn.addEventListener('click', () => {
        const entries = removeTrueDuplicates(buildFinalEntries());
        renderTimetableStacked(entries);
        document.getElementById('timetablePanel').classList.remove('hidden');
        document.getElementById('timetablePanel').scrollIntoView({ behavior:'smooth', block:'start' });
      });
    }
    document.getElementById('closeTimetable')?.addEventListener('click', () => {
      document.getElementById('timetablePanel').classList.add('hidden');
    });

    // Confirm modal (unchanged)
    const confirmBtn     = document.getElementById('confirmBtn');
    const confirmModal   = document.getElementById('confirmModal');
    const confirmClose   = document.getElementById('confirmClose');
    const confirmCancel  = document.getElementById('confirmCancel');
    const confirmSendBtn = document.getElementById('confirmSend');
    function openConfirmModal(){ confirmModal.classList.add('active'); }
    function closeConfirmModal(){ confirmModal.classList.remove('active'); }
    if (confirmBtn) confirmBtn.addEventListener('click', (e) => { e.preventDefault(); openConfirmModal(); });
    if (confirmClose)  confirmClose.addEventListener('click', closeConfirmModal);
    if (confirmCancel) confirmCancel.addEventListener('click', closeConfirmModal);
    if (confirmModal) {
      confirmModal.addEventListener('click', (e) => { if (e.target === confirmModal) closeConfirmModal(); });
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeConfirmModal(); });
    }
    if (confirmSendBtn) {
      confirmSendBtn.addEventListener('click', async () => {
        try {
          confirmSendBtn.disabled = true;
          const finalCourses = removeTrueDuplicates(buildFinalEntries());
          const problems = findConflicts(finalCourses);
          if (problems.length){
            const lines = problems.map(([a,b]) => `• ${a.code} (${formatMins(a.start)}–${formatMins(a.end)}) con ${b.code} (${formatMins(b.start)}–${formatMins(b.end)})`).join('\n');
            alert('Hay conflictos de horario. Cambia uno de los horarios:\n\n' + lines);
            confirmSendBtn.disabled = false;
            return;
          }

          const changesArr = [];
          document.querySelectorAll('.course').forEach(row => {
            const base = originals[row.id] || readCurrent(row);
            const sel  = changes[row.id];
            if (sel) {
              changesArr.push({
                code: row.getAttribute('data-code') || base.code,
                name: row.getAttribute('data-name') || base.name,
                from: { group: base.group, day: base.day, time: base.time, modality: base.modality },
                to:   { group: sel.group,  day: sel.day,  time: sel.time,  modality: sel.modality }
              });
            }
          });

          const student = {
            name: '<%= (_firstName + " " + _lastName) %>',
            code: '<%= _studentId %>',
            dni:  '<%= _dni %>',
            facultyName: '<%= _facultyName %>',
            specialtyName: '<%= _specialtyName %>',
            period: '<%= _semester %>',
            mode: '<%= _mode %>',
            email: '<%= _email %>',
            phone: '<%= _phone %>'
          };

          document.getElementById('loadingOverlay')?.classList.add('active');

          const resp = await fetch('/confirm', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ student, changes: changesArr, finalCourses })
          });
          if (!resp.ok) throw new Error('PDF generation failed');

          closeConfirmModal();

          const blob = await resp.blob();
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url; a.download = `rectification_${student.code}.pdf`;
          document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
        } catch (e) {
          alert('No se pudo generar el PDF.');
          console.error(e);
        } finally {
          confirmSendBtn.disabled = false;
          document.getElementById('loadingOverlay')?.classList.remove('active');
        }
      });
    }

    /* ===== Preferences + LOCAL AI ===== */
    function readPreferences(){
      // prefer modal selection if present
      const freeDays = Array.isArray(window._aiFreeDays)
        ? window._aiFreeDays.slice()
        : Array.from(document.querySelectorAll('.pref-free:checked')).map(i => i.value);
      const timePreference = 'no-preference';
      const keepChangesLow = true;
      return { timePreference, freeDays, keepChangesLow };
    }

    // === YOUR LOCAL LOGIC, now accepts prefsOverride ===
    async function autoAssignFromAvailable(prefsOverride) {
      const overlay = document.getElementById('loadingOverlay');
      try {
        overlay?.classList.add('active');

        const prefs = prefsOverride || readPreferences();
        const freeDayKeys = new Set((prefs.freeDays || []).map(d => sameDayKey(d)));

        const chosenTemp = [];
        const noTurno = [];
        const rows = Array.from(document.querySelectorAll('.course'));

        for (const row of rows) {
          const rowId = row.id;
          const idx   = Number(rowId.split('-')[1]);
          const base  = originals[rowId] || readCurrent(row);
          const courseCode = (row.getAttribute('data-code') || base.code || '').trim();
          const period     = row.getAttribute('data-period') || '';

          const currentDayKey = sameDayKey(base.day);

          const currentPlan = [...buildPlanExcept(rowId), ...chosenTemp];

          // fetch options
          let opts = [];
          try {
            const r = await fetch('/available', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ period, courseCode })
            });
            const j = await r.json();
            opts = (j.data || []).filter(o => norm(o.courseCode) === norm(courseCode));
          } catch { opts = []; }

          // normalize + filter by SAME MODALITY and NOT on a free day
          const originalMod = normalizeModalityDisplay(base.modality || '');
          const allNormalized = opts.map(o => {
            const parsed = parseDayTimeFromOption(o);
            return {
              code: courseCode,
              name: row.getAttribute('data-name') || base.name,
              group: o.groupCode || o.group || o.section || '',
              day: canonicalDay(parsed.day || ''),
              time: normalizeTime(parsed.time || ''),
              modality: normalizeModalityDisplay(o.modality || '')
            };
          });

          const outsideFree = allNormalized
            .filter(c => c.modality === originalMod)
            .filter(c => !freeDayKeys.has(sameDayKey(c.day)));

          let chosen = null;
          for (const cand of outsideFree) {
            const rng = parseRange(cand.time);
            if (!rng) continue;

            const sameSlot = sameDayKey(cand.day) === currentDayKey &&
                             cand.time === normalizeTime(base.time || base.hour || '');
            if (sameSlot && freeDayKeys.has(currentDayKey)) continue;

            const conflict = getConflict(currentPlan, cand.day, cand.time);
            if (!conflict) { chosen = { cand, rng }; break; }
          }
          if (!chosen && outsideFree.length) {
            const cand = outsideFree[0];
            const rng  = parseRange(cand.time);
            if (rng) chosen = { cand, rng };
          }

          if (!chosen) {
            if (freeDayKeys.has(currentDayKey)) {
              noTurno.push(`${base.code} — ${base.name}`);
            }
            continue;
          }

          const after = {
            code: base.code,
            name: row.getAttribute('data-name') || base.name,
            group: chosen.cand.group || base.group,
            day:   chosen.cand.day,
            time:  chosen.cand.time,
            modality: originalMod
          };
          changes[rowId] = after;
          renderChange(idx, { group: base.group, day: base.day, time: base.time, modality: base.modality }, after);

          chosenTemp.push({ code: base.code, day: after.day, ...chosen.rng });
        }

        if (noTurno.length) {
          alert('No hay turnos fuera de los días libres para:\n\n' + noTurno.join('\n'));
        }

      } catch (err) {
        console.error(err);
        alert('Ocurrió un error generando el horario.');
      } finally {
        overlay?.classList.remove('active');
      }
    }

    // helpers
    function formatMins(m){ const h=Math.floor(m/60), mm=String(m%60).padStart(2,'0'); return `${h}:${mm}`; }
    function escapeHtml(s) { return String(s || '').replace(/[&<>"']/g, (c) => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c])); }
    function safeJson(o) { return JSON.stringify(o).replace(/</g, '\\u003c'); }
  });
