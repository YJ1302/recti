          <div class="change-card">
            <div class="chg-field"><span class="label">Grupo :</span><span class="value">${escapeHtml(after.group)}</span></div>
            <div class="chg-field"><span class="label">Día :</span><span class="value">${escapeHtml(after.day)}</span></div>
            <div class="chg-field"><span class="label">Hora :</span><span class="value">${escapeHtml(after.time)}</span></div>
            <div class="chg-field"><span class="label">Modalidad :</span><span class="value">${escapeHtml(after.modality)}</span></div>
          </div>
        </div>`;
    }

    function buildPlanExcept(excludeRowId){
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        if (excludeRowId && row.id === excludeRowId) return;
        const base = originals[row.id] || readCurrent(row);
        const sel  = changes[row.id];
        const day  = canonicalDay(sel?.day || base.day);
        const time = normalizeTime(sel?.time || base.time);
        const range = parseRange(time);
        if (!range) return;
        const code = row.getAttribute('data-code') || base.code;
        entries.push({ code, day, time, start: range.start, end: range.end });
      });
      return entries;
    }

    // Build timetable excluding ALL rows of a given course (by courseCode)
    function buildPlanWithoutCourse(courseCode) {
      const excludeKey = norm(courseCode || '');
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        const base = originals[row.id] || readCurrent(row);
        const code = row.getAttribute('data-code') || base.code;
        if (excludeKey && norm(code) === excludeKey) return;

        const sel  = changes[row.id];
        const day  = canonicalDay(sel?.day || base.day);
        const time = normalizeTime(sel?.time || base.time);
        const range = parseRange(time);
        if (!range) return;
        entries.push({ code, day, time, start: range.start, end: range.end });
      });
      return entries;
    }

    // helper: remove all IA changes and clear "Cambios" boxes
    function resetChanges() {
      Object.keys(changes).forEach(k => delete changes[k]);
      document.querySelectorAll('.change-wrapper').forEach(el => {
        el.className = '';
        el.innerHTML = '';
      });
    }
    function getConflict(plan, day, time){
      const r = parseRange(time);
      if (!r) return null;
      const key = sameDayKey(day);
      for (const p of plan) {
        if (sameDayKey(p.day) !== key) continue;
        if (overlap(r, p)) return p;
      }
      return null;
    }

    // classify modality to group segments (T = teoría/virtual, L = laboratorio)
    function classifyModType(mod) {
      const m = normalizeModalityDisplay(mod || '').toUpperCase();
      if (m.includes('LAB')) return 'L';
      if (m.includes('VIRT') || m.includes('TEOR')) return 'T';
      return 'O';
    }

    // Check if ANY segment of a turno conflicts with the current plan
    function getGroupConflict(plan, option) {
      const sessions = Array.isArray(option.sessions) ? option.sessions : [];
      if (sessions.length) {
        for (const s of sessions) {
          const day = canonicalDay(s.day || s.dayName || "—");
          const time = normalizeTime(
            s.time ||
            `${s.start || s.hourStart || ''}-${s.end || s.hourEnd || ''}`
          );
          const conflict = getConflict(plan, day, time);
          if (conflict) return conflict;
        }
        return null;
      }

      // fallback: old behaviour using a single slot
      const dt = parseDayTimeFromOption(option);
      return getConflict(plan, dt.day, dt.time);
    }

    function parseDayTimeFromOption(o, preferredModality){
      const sessions = Array.isArray(o.sessions) ? o.sessions : null;

      if (sessions && sessions.length) {
        let seg = null;
        if (preferredModality) {
          const prefType = classifyModType(preferredModality);
          seg = sessions.find(s => classifyModType(s.modality || s.modalityNorm) === prefType) || null;
        }
        if (!seg) seg = sessions[0];

        const day = canonicalDay(seg.day || seg.dayName || "—");
        const time = normalizeTime(
          seg.time ||
          `${seg.start || seg.hourStart || ''}-${seg.end || seg.hourEnd || ''}`
        );
        return { day, time };
      }

      // ---- fallback: previous behaviour (no sessions[]) ----
      let day = o.day || "", time = normalizeTime(o.hour || o.time || "");
      if ((!day || !time) && o.scheduleText) {
        const first = String(o.scheduleText).split("•")[0].trim();
        const m = first.match(/^([A-Za-zÁÉÍÓÚÜÑáéíóúüñ]+)\s+(\d{1,2}:\d{2}\s*[-–]?\s*\d{1,2}:\d{2})/);
        if (m) { day = day || m[1]; time = normalizeTime(m[2]); }
        else if (!day) { day = first.split(/\s+/)[0]; }
      }
      return { day: canonicalDay(day || "—"), time: time || "—" };
    }

        // ===== Show only ONE card per course (combine teoría + laboratorio) =====
    (function groupEnrolledCards() {
