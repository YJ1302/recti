  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.getElementById('loginForm');
    if (loginForm) loginForm.addEventListener('submit', () =>
      document.getElementById('loadingOverlay').classList.add('active')
    );
    window.addEventListener('load', () =>
      document.getElementById('loadingOverlay').classList.remove('active')
    );

    const aiSuggestBtn = document.getElementById('aiSuggestBtn');
    const aiPreferencesModal = document.getElementById('aiPreferencesModal');
    const aiModalCancel = document.getElementById('aiModalCancel');
    const aiModalGenerate = document.getElementById('aiModalGenerate');
    const aiModalCheckboxes = aiPreferencesModal?.querySelectorAll('.checkbox-input');

    const ttToggleNew = document.getElementById('ttTabNew');
    let hasNewTimetable = false;
    let serverFinalPlan = null;

    function showAiModal() {
      if (!aiPreferencesModal) return;
      aiPreferencesModal.style.display = 'flex';
      document.body.classList.add('ai-modal-open');
    }
    function hideAiModal() {
      if (!aiPreferencesModal) return;
      aiPreferencesModal.style.display = 'none';
      document.body.classList.remove('ai-modal-open');
    }

    if (aiSuggestBtn) aiSuggestBtn.addEventListener('click', showAiModal);
    if (aiModalCancel) aiModalCancel.addEventListener('click', hideAiModal);

    // ==== SERVER-SIDE IA: call /ai-local and apply result ====
    if (aiModalGenerate) aiModalGenerate.addEventListener('click', async function() {
      const freeDays = Array.from(aiModalCheckboxes || [])
        .filter(cb => cb.checked)
        .map(cb => cb.value);

      hideAiModal();
      const overlay = document.getElementById('loadingOverlay');
      overlay?.classList.add('active');

      try {
        const resp = await fetch('/ai-local', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ preferences: { freeDays } })
        });
        const data = await resp.json();

        if (!resp.ok || !data || data.ok === false) {
          alert('No se pudo generar un horario con IA.');
          return;
        }

        applyServerPlan(data);
        document.getElementById('seeTimetableBtn')?.click();
      } catch (err) {
        console.error(err);
        alert('Ocurrió un error generando el horario.');
      } finally {
        overlay?.classList.remove('active');
      }
    });

    const norm = (s) => String(s || '').replace(/[^A-Z0-9]/gi, '').toUpperCase();
    const stripAcc = s => String(s||'').normalize('NFD').replace(/[\u0300-\u036f]/g, '');
    const canonicalDay = s => {
      const k = stripAcc(String(s||'')).toLowerCase();
      const map = { lunes:'Lunes', martes:'Martes', miercoles:'Miércoles', jueves:'Jueves', viernes:'Viernes', sabado:'Sábado', domingo:'Domingo' };
      return map[k] || (s || '—');
    };

    const modalityDisplayNames = {
      'TEORÍA VIRTUAL':'TEORÍA VIRTUAL','TEORIA VIRTUAL':'TEORÍA VIRTUAL','VIRTUAL':'TEORÍA VIRTUAL','TEV':'TEORÍA VIRTUAL','VIR':'TEORÍA VIRTUAL',
      'TEORÍA PRESENCIAL':'TEORÍA PRESENCIAL','TEORIA PRESENCIAL':'TEORÍA PRESENCIAL','PRESENCIAL':'TEORÍA PRESENCIAL','TEP':'TEORÍA PRESENCIAL',
      'LABORATORIO PRESENCIAL':'LABORATORIO PRESENCIAL','LAB PRESENCIAL':'LABORATORIO PRESENCIAL','LBP':'LABORATORIO PRESENCIAL',
      'V':'TEORÍA VIRTUAL','P':'TEORÍA PRESENCIAL','L':'LABORATORIO PRESENCIAL','PRE':'TEORÍA PRESENCIAL'
    };
    function normalizeModalityDisplay(m){
      const t = stripAcc(String(m||'')).toUpperCase().trim();
      return modalityDisplayNames[t] || (m || '—');
    }
    function modalityLetter(mod){
      const m = stripAcc(String(normalizeModalityDisplay(mod)||'')).toUpperCase();
      if (m.includes('LAB')) return 'L';
      if (m.includes('VIRTUAL')) return 'V';
      if (m.includes('PRE')) return 'P';
      return '—';
    }

    function normalizeTime(t){
      const s = String(t || '').trim();
      const m = s.match(/(\d{1,2}):(\d{2}).*?(\d{1,2}):(\d{2})/);
      if (m) return `${String(m[1]).padStart(2,'0')}:${m[2]}–${String(m[3]).padStart(2,'0')}:${m[4]}`;
      return s.replace(/\s*-\s*/g,'–').replace(/\s*–\s*/g,'–').replace(/\s+to\s+/i,'–').replace(/\s{2,}/g,' ');
    }
    const sameDayKey = d => stripAcc(String(d||'')).toLowerCase();
    function parseRange(range){
      const m = String(range || '').match(/(\d{1,2}):(\d{2}).*?(\d{1,2}):(\d{2})/);
      if (!m) return null;
      const a = (+m[1])*60 + (+m[2]);
      const b = (+m[3])*60 + (+m[4]);
      return a < b ? { start: a, end: b } : { start: b, end: a };
    }
    const overlap = (a,b) => a && b && a.start < b.end && b.start < a.end;

    const originals = {};
    const changes   = {};

    function readCurrent(row){
      const badge = row.querySelector('.badge');
      const metaItems = row.querySelectorAll('.course-meta .meta-item');
      return {
        code: (badge && badge.textContent || '—').trim(),
        name: (row.querySelector('.course-title')?.textContent || '—').trim(),
        group: metaItems[1] ? metaItems[1].querySelector('strong').textContent.trim() : '—',
        day:   canonicalDay(metaItems[2] ? metaItems[2].querySelector('strong').textContent.trim() : '—'),
        time:  normalizeTime(metaItems[3] ? metaItems[3].querySelector('strong').textContent.trim() : '—'),
        modality: normalizeModalityDisplay(metaItems[4] ? metaItems[4].querySelector('strong').textContent.trim() : '—')
      };
    }

    function renderChange(idx, before, after){
      const host = document.getElementById('chg-' + idx);
      if (!host) return;
      host.className = 'change-wrapper';
      host.innerHTML = `
        <div class="change-title">Cambios</div>
        <div class="change-compare">
          <div class="change-card">
            <div class="chg-field"><span class="label">Grupo :</span><span class="value">${escapeHtml(before.group)}</span></div>
            <div class="chg-field"><span class="label">Día :</span><span class="value">${escapeHtml(before.day)}</span></div>
            <div class="chg-field"><span class="label">Hora :</span><span class="value">${escapeHtml(before.time)}</span></div>
            <div class="chg-field"><span class="label">Modalidad :</span><span class="value">${escapeHtml(before.modality)}</span></div>
          </div>
          <div class="change-arrow">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </div>
          <div class="change-card">
            <div class="chg-field"><span class="label">Grupo :</span><span class="value">${escapeHtml(after.group)}</span></div>
            <div class="chg-field"><span class="label">Día :</span><span class="value">${escapeHtml(after.day)}</span></div>
            <div class="chg-field"><span class="label">Hora :</span><span class="value">${escapeHtml(after.time)}</span></div>
            <div class="chg-field"><span class="label">Modalidad :</span><span class="value">${escapeHtml(after.modality)}</span></div>
          </div>
        </div>`;
    }

    function buildPlanExcept(excludeRowId){
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        if (excludeRowId && row.id === excludeRowId) return;
        const base = originals[row.id] || readCurrent(row);
        const sel  = changes[row.id];
        const day  = canonicalDay(sel?.day || base.day);
        const time = normalizeTime(sel?.time || base.time);
        const range = parseRange(time);
        if (!range) return;
        const code = row.getAttribute('data-code') || base.code;
        entries.push({ code, day, time, start: range.start, end: range.end });
      });
      return entries;
    }

    function buildPlanWithoutCourse(courseCode) {
      const excludeKey = norm(courseCode || '');
      const entries = [];
      document.querySelectorAll('.course').forEach(row => {
        const base = originals[row.id] || readCurrent(row);
        const code = row.getAttribute('data-code') || base.code;
        if (excludeKey && norm(code) === excludeKey) return;
        const sel  = changes[row.id];
        const day  = canonicalDay(sel?.day || base.day);
        const time = normalizeTime(sel?.time || base.time);
        const range = parseRange(time);
        if (!range) return;
        entries.push({ code, day, time, start: range.start, end: range.end });
      });
      return entries;
    }

        function resetChanges() {
        // 1) Clear logical changes + visual highlight on each course
        Object.keys(changes).forEach(rowId => {
          delete changes[rowId];
          markCourseChanged(rowId, false);
        });

        // 2) Clear “Cambios” boxes
        document.querySelectorAll('.change-wrapper').forEach(el => {
          el.className = '';
          el.innerHTML = '';
        });

        // 3) Forget any IA plan
        serverFinalPlan = null;

        // 4) Reset “we have a new timetable” flag
        if (typeof hasNewTimetable !== 'undefined') {
          hasNewTimetable = false;
        }

        // 5) Lock toggle to original & clear new grid
        const tabNew = document.getElementById('ttTabNew');
        if (tabNew) {
          tabNew.disabled = true;
          tabNew.classList.add('tt-tab-disabled');
        }
        const gridNew = document.getElementById('ttGridNew');
        if (gridNew) {
          gridNew.innerHTML = '';
        }
      }


    function clearAllChangesUI() {
      Object.keys(changes).forEach(k => delete changes[k]);
      document.querySelectorAll('[id^="chg-"]').forEach(el => {
        el.className = 'change-wrapper';
        el.innerHTML = '';
      });
    }

    function getConflict(plan, day, time){
      const r = parseRange(time);
      if (!r) return null;
      const key = sameDayKey(day);
      for (const p of plan) {
        if (sameDayKey(p.day) !== key) continue;
        if (overlap(r, p)) return p;
      }
      return null;
    }

    function classifyModType(mod) {
      const m = normalizeModalityDisplay(mod || '').toUpperCase();
      if (m.includes('LAB')) return 'L';
      if (m.includes('VIRT') || m.includes('TEOR')) return 'T';
      return 'O';
    }
    // Highlight a course row as "changed" (Cambiado pill + tinted background)
    function markCourseChanged(rowId, changed){
      const row = document.getElementById(rowId);
