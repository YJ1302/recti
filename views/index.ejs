<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Portal de Rectificación de cursos</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <link rel="stylesheet" href="/css/style.css" />

  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  <script type="module" src="https://unpkg.com/@lottiefiles/dotlottie-wc@0.6.2/dist/dotlottie-wc.js"></script>

  <style>
    :root{ --main-pink:#f02454; --main-pink-dark:#c81e47; --muted:#6b7280; --border:#e5e7eb; }
    body{ background:linear-gradient(135deg,#f8fafc,#eef2ff,#e0e7ff); min-height:100vh; padding:24px; font-family:system-ui,Arial,sans-serif; }
    .wrap{ max-width:1100px; margin:0 auto; }
    .card{ background:#fff; border-radius:16px; box-shadow:0 8px 24px rgba(0,0,0,.08); overflow:hidden; }
    .muted{ color:var(--muted); font-size:.95rem; }

    .header{
      background:linear-gradient(90deg,var(--main-pink),var(--main-pink-dark));
      color:#fff;
      padding:24px 28px;
      border-radius:18px 18px 0 0;
    }
    .header-row{
      display:flex;
      align-items:center;
      gap:18px;
    }
    .avatar{
      background:rgba(255,255,255,.18);
      border-radius:50%;
      width:60px;
      height:60px;
      display:flex;
      align-items:center;
      justify-content:center;
      font-weight:800;
      font-size:1.75rem;
    }
    .header-main{
      font-size:1.8rem;
      font-weight:800;
      letter-spacing:.5px;
    }

    .profile-cards{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
      gap:12px;
      padding:18px 20px 16px;
      background:#ffffff;
    }
    .profile-card{
      background:#f9fafb;
      border-radius:12px;
      padding:10px 14px;
      min-height:58px;
      border:1px solid #e5e7eb;
      display:flex;
      flex-direction:column;
      justify-content:center;
    }
    .profile-label{
      color:#6b7280;
      font-size:12px;
      font-weight:600;
      margin-bottom:4px;
      letter-spacing:.2px;
    }
    .profile-value{
      color:#111827;
      font-size:14px;
      font-weight:700;
      word-break:break-word;
    }
    .tt-tab[disabled],
    .tt-tab.tt-tab-disabled{
      opacity: .45;
      cursor: default;
    }

    @media (max-width: 640px){
      .header{ padding:18px 16px; }
      .header-main{ font-size:1.4rem; }
      .profile-cards{
        padding:12px 12px 10px;
        grid-template-columns:1fr;
      }
    }

    .grid{ display:grid; gap:16px; }
    .grid-3{ grid-template-columns:repeat(3,1fr); }
    .panel{ background:#fff; border-radius:14px; box-shadow:0 6px 18px rgba(0,0,0,.06); padding:20px; }

    .badge{ display:inline-block; padding:8px 12px; border-radius:10px; font-weight:800; letter-spacing:.8px; }
    .badge.purple{ background:linear-gradient(90deg,#f02454,#c81e47); color:#fff; }

    .course-container{ display:flex; flex-direction:column; gap:12px; }

    @media (max-width: 900px) {
      .course{ grid-template-columns: 1fr; grid-template-rows: auto auto auto; align-items: flex-start; }
      .course-code{ justify-content: flex-start; margin-bottom: 6px; }
      .repl{ grid-column: 1; justify-self: stretch; width: 100%; margin-top: 8px; }
      .repl[open]{ grid-column: 1 / -1; justify-self: stretch; margin-top: 8px; }
      .repl[open] > summary{ text-align: right; margin-bottom: 8px; }
    }

    .course:hover{ box-shadow:0 2px 8px rgba(0,0,0,.05); transform: translateY(-1px); }
    .course-hidden-segment { display: none !important;}
    .course-code{
      display:flex;
      align-items:center;
      justify-content:center;
      gap:8px;               /* space between code badge and “Cambiado” pill */
      flex-wrap:wrap;
    }

    /* ===== Visual highlight for courses with changes ===== */
      .course--changed{
        background:#fff7fb;                      /* light pink background */
        border-color:#fecaca;                    /* soft red border */
        box-shadow:0 0 0 1px rgba(248,113,113,.08),
                  0 8px 20px rgba(248,113,113,.12);
      }

      .course-change-pill{
        padding:4px 10px;
        border-radius:999px;
        font-size:.78rem;
        font-weight:700;
        background:#fef2f2;
        color:#b91c1c;
        border:1px solid #fecaca;
        text-transform:uppercase;
        letter-spacing:.4px;
      }

    .course-details{ display:flex; flex-direction:column; gap:8px; }
    .course-title{ font-weight:700; font-size:1.02rem; color:#111827; margin:0; }
    .course-meta{ display:flex; flex-wrap:wrap; gap:10px 14px; font-size:.9rem; color:#374151; }
    .meta-item{ display:flex; gap:6px; }
    .meta-item:not(:last-child)::after{ content:"•"; margin-left:6px; color:#d1d5db; }
    .repl{
      grid-column: 3;
      justify-self: end;
    }

    /* make summary look like a button */
    .repl > summary{
      list-style:none;
      cursor:pointer;
      padding:8px 12px;
      border-radius:999px;
      border:1px solid var(--border);
      font-weight:700;
      font-size:.9rem;
      color:#111827;
      background:#f9fafb;
      display:inline-flex;
      align-items:center;
      gap:6px;
    }
    .repl > summary::marker,
    .repl > summary::-webkit-details-marker{
      display:none;
    }
    .repl > summary::after{
      content:"▾";
      font-size:.7rem;
      opacity:.7;
      transform:translateY(1px);
    }
    .repl[open] > summary::after{ content:"▴"; }
    .repl > summary:hover{
      background:#eef2ff;
      border-color:#c7d2fe;
    }

    .repl[open]{
      grid-column: 1 / -1;
      justify-self: stretch;
      margin-top: 8px;
    }
    .repl[open] > summary{
      text-align: right;
      margin-bottom: 8px;
    }

    .replacement-options{
      width: 100%;
      border: 1px solid var(--border);
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      margin-top: 4px;
    }

    .option{
      display:grid;
      grid-template-columns:minmax(0, 120px) minmax(0, 1fr) minmax(0, 220px);
      align-items:flex-start;
      gap:16px;
      padding:14px 16px;
      border-top:1px solid var(--border);
    }

    .option:first-child{ border-top:none; }
    .option-code{
      width:100%;
      display:flex;
      align-items:center;
      justify-content:center;
      background:linear-gradient(90deg,#f02454,#c81e47);
      color:#fff;
      border-radius:10px;
      padding:10px;
      font-weight:800;
      letter-spacing:1px;
    }
    .option-fields{
      display:grid;
      grid-template-columns:minmax(0,140px) minmax(0,1fr);
      column-gap:16px;
      row-gap:8px;
      align-items:flex-start;
    }
    .field .label{ display:block; color:#6b7280; font-size:.78rem; margin-bottom:4px; }
    .field .value{ font-weight:700; font-size:.92rem; color:#111827; }
    .option-cta{ display:flex; flex-direction:column; gap:8px; align-items:center; justify-content:center; }
    .option-btn{ width:100%; height:52px; border-radius:10px; font-weight:800; color:#fff; background:#2563eb; border:1px solid #2563eb; cursor:pointer; }
    .option-btn[disabled]{ opacity:.45; cursor:not-allowed; filter:grayscale(0.1); }
    .conflict-note{ color:#b91c1c; font-size:.85rem; text-align:center; }

    .change-wrapper{ margin:10px 0 2px; padding:14px 16px; border:1px dashed #e6e8ee; border-radius:12px; background:#fcfcff; }
    .change-title{ font-weight:800; color:#0f172a; margin-bottom:10px; letter-spacing:.3px; }
    .change-compare{ display:grid; grid-template-columns:1fr 60px 1fr; gap:14px; align-items:stretch; }
    .change-card{ border:1px solid var(--border); background:#fff; border-radius:12px; padding:12px 14px; display:grid; grid-template-columns:repeat(4,minmax(0, 1fr)); gap:8px 16px; }

    .actions-center{ text-align:center; margin-top:18px; display:flex; gap:10px; justify-content:center; flex-wrap:wrap; }
    .btn-primary{ background:#2563eb; color:#fff; border:1px solid #2563eb; padding:10px 16px; border-radius:10px; font-weight:800; box-shadow:0 6px 14px rgba(37,99,235,.16); cursor:pointer; }
    .btn-primary:hover{ filter:brightness(0.96); }
    .btn-primary[disabled]{ opacity:.5; cursor:not-allowed; }
        .btn-secondary{
      background:#f3f4f6;
      color:#111827;
      border:1px solid #d1d5db;
      padding:10px 16px;
      border-radius:10px;
      font-weight:700;
      cursor:pointer;
    }
    .btn-secondary:hover{
      background:#e5e7eb;
    }


    .btn-primary.btn-glow{ padding:8px 14px; font-size:1rem; border-radius:4px; box-shadow:0 0 16px 2px #f02454,0 0 32px 4px #ffd6e1; animation:glowPulse 2s infinite alternate; border:2px solid #f02454; background:linear-gradient(90deg,#f02454,#c81e47); }
    @keyframes glowPulse{
      0%{box-shadow:0 0 16px 2px #f02454,0 0 32px 4px #ffd6e1;}
      100%{box-shadow:0 0 32px 6px #f02454,0 0 48px 8px #ffd6e1;}
    }

    .error{ color:#b00; background:#630606; border:1px solid #fbb; padding:10px; border-radius:8px; margin-bottom:16px; }
    .title-container{ display:flex; justify-content:space-between; align-items:center; margin-bottom:18px; }
    .uma-header-logo { width:84px; height:auto; display:block; object-fit:contain; }
    .loading-overlay{ position:fixed; z-index:9999; inset:0; background:rgba(255,255,255,.95); display:flex; align-items:center; justify-content:center; opacity:0; pointer-events:none; transition:opacity .3s; }
    .loading-overlay.active{ opacity:1; pointer-events:all; }
    .hidden{ display:none; }

    .timetable { margin-top: 18px; }

    .tt-header{
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 10px;
    }
    .tt-toggle-row{
      display:flex;
      align-items:center;
      justify-content:center;
    }

    .tt-tabs{
      display:inline-flex;
      background:#f3f4f6;
      padding:3px;
      border-radius:999px;
      gap:4px;
    }

    .tt-tab{
      border:none;
      background:transparent;
      padding:6px 12px;
      border-radius:999px;
      font-size:0.85rem;
      font-weight:700;
      color:#4b5563;
      cursor:pointer;
    }
    .tt-tab-active{
      background:#111827;
      color:#fff;
    }
    .ttGridWrapper{ width:100%; }

    .tt-close{
      background: var(--main-pink);
      color: #fff;
      border: 1px solid var(--main-pink-dark);
      padding: 6px 8px;
      border-radius: 11px;
      cursor: pointer;
      font-weight: 700;
      font-size: 0.9rem;
      line-height: 1;
      transition: none;
    }
    .tt-close:hover{
      background: var(--main-pink);
      color: #fff;
    }
    .tt-close:focus{
      outline: 2px solid rgba(0,0,0,0.08);
      outline-offset: 2px;
    }
    .tt-board{
      display: flex;
      flex-direction: column;
      align-items: stretch;
      width: 100%;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .tt-head {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      background: #1f2a37;
      color: #fff;
      padding: 0;
      box-sizing: border-box;
      border-radius: 14px 14px 0 0;
      border-bottom: 1px solid #e5e7eb;
      overflow: hidden;
      width: 100%;
      min-width: 0;
    }
    .tt-grid { min-width: 720px; }
    .tt-head .cell {
      padding: 18px 0 16px 0;
      font-weight: 900;
      font-size: 1.13rem;
      letter-spacing: .2px;
      text-align: center;
      border-left: 1px solid rgba(255,255,255,.08);
      border-right: none;
      border-top: none;
      border-bottom: none;
      background: none;
    }
    .tt-head .cell:first-child { border-left: none; border-radius: 14px 0 0 0; }
    .tt-head .cell:last-child  { border-radius: 0 14px 0 0; }

    .tt-grid { display: grid; grid-template-columns: repeat(6, 1fr); padding: 0; box-sizing: border-box; border-top: none; width: 100%; min-width: 0; }
    .tt-col { min-height: 180px; padding: 12px 0; border-left: 1px solid #f3f4f6; display: flex; flex-direction: column; gap: 12px; background: #fff; align-items: center; width: 100%; min-width: 0; }
    .tt-col:first-child { border-left: none; }

    .card-mini {
      width: 100%;
      min-width: 0;
      max-width: 100%;
      min-height: 110px;
      background: #fff;
      border: 1px solid #eef0f6;
      border-radius: 16px;
      padding: 14px 12px;
      display: flex;
      flex-direction: column;
      gap: 7px;
      box-shadow: 0 4px 12px rgba(0,0,0,.06);
      align-items: flex-start;
      justify-content: center;
      margin: 0;
      box-sizing: border-box;
    }
    .card-mini .code {
      display: inline-block;
      background: linear-gradient(90deg,#f02454,#c81e47);
      color: #fff;
      font-weight: 900;
      letter-spacing: .8px;
      border-radius: 12px;
      padding: 4px 10px;
      font-size: 1rem;
      align-self: flex-start;
    }
    .card-mini .name {
      font-weight: 800;
      color: #0f172a;
      line-height: 1.15;
      font-size: 0.93rem;
      max-width: 180px;
      white-space: normal;
      overflow-wrap: break-word;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      line-clamp: 2;
      overflow: hidden;
      text-overflow: ellipsis;
      min-height: 2.2em;
    }
    .card-mini .meta {
      display: flex;
      gap: 8px;
      align-items: center;
      flex-wrap: wrap;
      font-size: 0.97rem;
    }
    .chip { background: #f8fafc; border: 1px solid #e5e7eb; padding: 3px 8px; border-radius: 999px; font-weight: 800; font-size: .93rem; }
    .chip.mod { min-width: 1.75rem; text-align: center; }
    .tt-legend{ padding:12px 16px; background:#f8fafc; border-top:1px solid #eef0f6; display:flex; gap:18px; align-items:center; flex-wrap:wrap; }
    .dot{ width:8px; height:8px; background:#e11d48; border-radius:999px; display:inline-block; margin-right:8px; }

    @media (max-width: 900px){
      .tt-head .cell{ padding:14px 10px; }
    }

    .ai-modal-overlay {
      position: fixed;
      z-index: 10000;
      inset: 0;
      background: rgba(60,60,80,0.18);
      backdrop-filter: blur(6px);
      display: none;
      align-items: center;
      justify-content: center;
      transition: opacity 0.3s;
    }
    body.ai-modal-open > .wrap,
    body.ai-modal-open > .loading-overlay {
      filter: blur(6px) brightness(0.95);
      pointer-events: none;
      user-select: none;
    }

    .preferences-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 20px;
      padding: 32px 28px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.3);
      max-width: 520px;
      width: 92vw;
    }
    .card-header { text-align: center; margin-bottom: 20px; }
    .card-title { font-size: 1.6rem; font-weight: 800; color: #2d3748; margin-bottom: 6px; }
    .card-subtitle { color: #718096; font-size: 0.95rem; }

    .selected-days { background: #f0f4ff; padding: 12px; border-radius: 12px; margin: 14px 0 18px; border-left: 4px solid #ea6692; }
    .selected-days-text { color: #4a5568; font-size: 0.92rem; }
    .selected-days-count { font-weight: 800; color: #ce6588; }

    .section-title { font-size: 1rem; font-weight: 700; color: #4a5568; margin: 8px 0 12px; display:flex; align-items:center; gap:8px; }
    .section-title::before { content: ""; }

    .days-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 14px; margin-bottom: 18px; }
    .day-checkbox{ display:flex; flex-direction:column; align-items:center; gap:8px; }
    .checkbox-label { position: relative; width: 62px; height: 62px; cursor: pointer; }
    .checkbox-input { position: absolute; opacity: 0; width: 0; height: 0; }
    .checkbox-custom {
      width: 100%;
      height: 100%;
      background: #f7fafc;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      font-weight: 800;
      color: #718096;
    }
    .checkbox-input:checked + .checkbox-custom {
      background: linear-gradient(135deg, #e53860, #e53860);
      border-color: #dd6990;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(102,126,234,0.3);
    }
    .checkbox-input:checked + .checkbox-custom::after {
      content: "✓";
      font-size: 1rem;
      margin-left: 6px;
    }
    .day-name { font-size: 0.88rem; color: #4a5568; font-weight: 600; }

    .buttons-container{ display:flex; gap:12px; }
    .btn{ flex:1; padding:12px 16px; border:none; border-radius:12px; font-size:1rem; font-weight:800; cursor:pointer; transition:.2s; }
    .btn-cancel{ background:#f7fafc; color:#718096; border:2px solid #e2e8f0; }
    .btn-cancel:hover{ background:#edf2f7; }
    .btn-generate{ background: linear-gradient(135deg, #667eea, #764ba2); color:#fff; box-shadow:0 4px 15px rgba(102,126,234,.3); }
    .btn-generate:hover{ transform: translateY(-1px); }

    .btn-ia {
      --glow-color-1: rgba(240,36,84,0.95);
      --glow-color-2: rgba(102,126,234,0.9);
      position: relative;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 0;
      border-radius: 18px;
      background: linear-gradient(90deg, var(--glow-color-1), var(--glow-color-2));
      color: #fff;
      font-weight: 800;
      border: none;
      cursor: pointer;
    }
    .btn-ia__inner{ display: inline-flex; align-items: center; justify-content: center; background: #0e0c0c; color: #fafbff; font-weight: 900; padding: 14px 40px; }
    .btn-ia__label{ font-size:1.05rem; }
    .btn-ia::after {
      content: '';
      position: absolute;
      opacity: 0.55;
      transition: opacity .28s ease, transform .28s ease, filter .28s ease, background .28s ease;
      z-index: 0;
      pointer-events: none;
      mix-blend-mode: screen;
    }
    .btn-ia:hover, .btn-ia:focus {
      transform: translateY(-2px);
      box-shadow: 0 14px 36px rgba(16,24,40,0.12);
      background: transparent;
    }
    .btn-ia:hover::after, .btn-ia:focus::after {
      opacity: 1;
      transform: scale(1.04);
      filter: blur(12px);
      animation: iaGlow 2.2s ease-in-out infinite;
    }
    @keyframes iaGlow {
      0% { transform: scale(1.00); opacity: 0.55; filter: blur(20px); }
      50% { transform: scale(1.06); opacity: 1; filter: blur(10px); }
      100% { transform: scale(1.00); opacity: 0.55; filter: blur(20px); }
    }

    @media (max-width: 900px) {
      .wrap { max-width: 100vw; padding: 0 2vw; }
      .profile-cards { grid-template-columns: 1fr 1fr; }
      .tt-head, .tt-grid { grid-template-columns: repeat(6,1fr) !important; font-size: 0.97rem; }
      .tt-head .cell { padding: 10px 2px; font-size: 0.97rem; }
      .tt-col { min-height: 100px; gap: 8px; }
      .card-mini { font-size: 0.93rem; padding: 8px 4px; }
    }
    @media (max-width: 600px) {
      .wrap { padding: 0 1vw; }
      .profile-cards { grid-template-columns: 1fr; gap: 8px; }
      .panel { padding: 8px 2px; }
      .tt-head, .tt-grid { grid-template-columns: repeat(6, 1fr) !important; }
      .tt-head .cell, .tt-col { font-size: 0.91rem; }
      .tt-board { width: 100vw; }
      .tt-col { min-height: 80px; padding: 4px 0; }
      .card-mini { width: 100%; min-width: 0; max-width: 100%; padding: 6px 2px; font-size: 0.89rem; border-radius: 14px; }
      .card-mini .name { font-size: 0.87rem; max-width: 96vw; }
      .actions-center { flex-direction: column; gap: 8px; }
      .btn-primary, .btn { width: 100%; font-size: 1rem; }
      .ai-modal-overlay .preferences-card { padding: 12px 2px; max-width: 99vw; }
    }

    .login-card { max-width:420px; margin: 28px auto; background:#fff; border-radius:14px; padding:26px 22px; box-shadow:0 10px 30px rgba(16,24,40,0.08); text-align:center; }
    .login-card__logo { width:190px; height:90px; display:block; margin: 4px auto 12px; }
    .login-card__title { font-weight:800; color:#0f172a; margin-bottom:12px; font-size:1.05rem; }
    .login-card .form-section { text-align:left; margin-top:8px; }
    .login-card .form-group label { display:block; margin-bottom:6px; font-weight:700; color:#374151; }
    .login-card .input-with-icon { display:flex; align-items:center; gap:8px; border:1px solid var(--border); padding:10px 12px; border-radius:10px; }
    .login-card .input-with-icon input { border:0; outline:none; width:100%; font-size:1rem; }

    .course{
      display:grid;
      grid-template-columns:120px 1fr 240px;
      align-items:center;
      gap:16px;
      padding:16px;
      border:1px solid var(--border);
      border-radius:12px;
      background:#fff;
      transition:box-shadow .15s ease, transform .15s ease;
    }

    .panel-header{
      display:flex;
      align-items:center;
      justify-content:space-between;
      margin-bottom:16px;
      gap:16px;
      flex-wrap:wrap;
    }
